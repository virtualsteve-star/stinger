[flake8]
max-line-length = 100
extend-ignore = E203, W503, E402
exclude = 
    .git,
    __pycache__,
    docs/source/conf.py,
    old,
    build,
    dist,
    .eggs,
    *.egg-info,
    .pytest_cache,
    .venv,
    venv,
    demos/web_demo/frontend,
    demos/web_demo/node_modules

# E203: whitespace before ':' (conflicts with black)
# W503: line break before binary operator (conflicts with black)
# E402: module level import not at top of file (needed for sys.path manipulation)

per-file-ignores =
    # Allow unused imports in __init__.py files
    */__init__.py:F401
    # Allow bare except in specific files
    src/stinger/core/audit.py:E722
    # Allow missing f-string placeholders in logging
    */health_monitor.py:F541
    */audit.py:F541
    */base_runner.py:F541
    # Test files can have module imports after sys.path manipulation
    tests/*:E402
    # Allow unused imports in test files
    tests/*:F401