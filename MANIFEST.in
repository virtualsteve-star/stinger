# Include the README
include README.md

# Include the license file
include LICENSE

# Include all requirements files
include requirements*.txt

# Include all package data files
recursive-include src/stinger *.yaml *.yml *.txt *.md

# Include test data files
recursive-include src/stinger/data *
recursive-include src/stinger/scenarios *.yaml *.jsonl
recursive-include src/stinger/guardrails/configs *.yaml

# Exclude unnecessary files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude .gitignore

# Exclude development files
prune demos
prune docs
prune tests
prune scripts